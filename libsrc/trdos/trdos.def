; trdos-specific section of a dir handle
defvars 0
{
	trdos_dir_block_number	ds.w	1	; block number that the directory pointer currently sits in
	trdos_dir_block_offset	ds.b	1	; offset into the (256-byte) sector where the next dir entry is
}

; trdos-specific section of a dirent handle
defvars 0
{
	trdos_dirent_sector_count	ds.b	1
	trdos_dirent_start_sector	ds.b	1
	trdos_dirent_start_track	ds.b	1
}
